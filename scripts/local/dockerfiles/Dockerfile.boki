FROM ubuntu:focal as release

# install curl for opentelemetry which requires libcurl.so
RUN apt update && \
    apt install -y curl

COPY . /src/boki

COPY ./bin/release/gateway    /boki/gateway
COPY ./bin/release/engine     /boki/engine
COPY ./bin/release/launcher   /boki/launcher
COPY ./bin/release/sequencer  /boki/sequencer
COPY ./bin/release/storage    /boki/storage
COPY ./bin/release/controller /boki/controller

WORKDIR /boki
