FROM adjwang/boki:dev as boki
FROM ubuntu:focal

# install curl for opentelemetry which requires libcurl.so
RUN apt update && \
    apt install -y curl

COPY ./sharedlog/bin    /test-bin/sharedlog
COPY --from=boki        /boki/launcher  /boki/launcher
COPY --from=boki        /boki/libindex.so    /boki/libindex.so
