{
    "machines": {
        "bokiexp-gateway": { "type": "c5d.2xlarge", "role": "manager" },
        "bokiexp-sequencer-1": { "type": "c5d.2xlarge", "role": "worker", "labels": ["sequencer_node=true"] },
        "bokiexp-engine-1": { "type": "c5d.2xlarge", "role": "worker", "labels": [ "engine_node=true" ] },
        "bokiexp-storage-1": { "type": "c5d.2xlarge", "role": "worker", "mount_instance_storage": "nvme1n1", "labels": ["storage_node=true"] },
        "bokiexp-client": { "type": "c5d.xlarge", "role": "client" }
    },
    "services": {
        "zookeeper": { "placement": "bokiexp-gateway" },
        "zookeeper-setup": { "placement": "bokiexp-gateway" },
        "boki-controller": { "placement": "bokiexp-gateway" },
        "boki-gateway": { "placement": "bokiexp-gateway" },
        "boki-storage": { "placement_label": "storage_node", "replicas": 1 },
        "boki-sequencer": { "placement_label": "sequencer_node", "replicas": 1 },
        "boki-engine": { "placement_label": "engine_node", "replicas": 1 },
        "frontend": { "placement_label": "engine_node", "replicas": 1, "need_aws_env": true, "mount_certs": true },
        "cast-info-service": { "placement_label": "engine_node", "replicas": 1, "need_aws_env": true, "mount_certs": true },
        "review-storage-service": { "placement_label": "engine_node", "replicas": 1, "need_aws_env": true, "mount_certs": true },
        "user-review-service": { "placement_label": "engine_node", "replicas": 1, "need_aws_env": true, "mount_certs": true },
        "movie-review-service": { "placement_label": "engine_node", "replicas": 1, "need_aws_env": true, "mount_certs": true },
        "compose-review-service": { "placement_label": "engine_node", "replicas": 1, "need_aws_env": true, "mount_certs": true },
        "text-service": { "placement_label": "engine_node", "replicas": 1, "need_aws_env": true, "mount_certs": true },
        "user-service": { "placement_label": "engine_node", "replicas": 1, "need_aws_env": true, "mount_certs": true },
        "unique-id-service": { "placement_label": "engine_node", "replicas": 1, "need_aws_env": true, "mount_certs": true },
        "rating-service": { "placement_label": "engine_node", "replicas": 1, "need_aws_env": true, "mount_certs": true },
        "movie-id-service": { "placement_label": "engine_node", "replicas": 1, "need_aws_env": true, "mount_certs": true },
        "plot-service": { "placement_label": "engine_node", "replicas": 1, "need_aws_env": true, "mount_certs": true },
        "movie-info-service": { "placement_label": "engine_node", "replicas": 1, "need_aws_env": true, "mount_certs": true },
        "page-service": { "placement_label": "engine_node", "replicas": 1, "need_aws_env": true, "mount_certs": true }
    },
    "aws_region": "us-east-2"
}
